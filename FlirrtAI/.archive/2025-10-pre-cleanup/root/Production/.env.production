# ðŸš€ Flirrt.ai Production Environment Configuration
# Bulletproof Multi-Agent Production Deployment

# Environment
NODE_ENV=production
DEPLOYMENT_ENV=production
DEPLOYMENT_DATE=2025-09-25
DEPLOYMENT_VERSION=1.0.0

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=flirrt_prod
POSTGRES_USER=flirrt_user
POSTGRES_PASSWORD=CHANGE_IN_PRODUCTION_123!@#

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD_456!@#

# Application Configuration
PORT=3000
JWT_SECRET=CHANGE_JWT_SECRET_PRODUCTION_789!@#

# API Keys (SET THESE IN PRODUCTION)
GROK_API_KEY=your_grok_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# AI Agent Configuration
ENABLE_AGENT_ORCHESTRATION=true
ENABLE_SAFETY_FILTER=true
ENABLE_PERSONALIZATION=true
ENABLE_VOICE_SYNTHESIS=true
ENABLE_CONSENT_TRACKING=true

# Agent Specific Settings
SCREENSHOT_ANALYZER_ENABLED=true
FLIRT_GENERATOR_ENABLED=true
VOICE_SYNTHESIS_AGENT_ENABLED=true
PERSONALIZATION_AGENT_ENABLED=true
CONSENT_PRIVACY_AGENT_ENABLED=true
SAFETY_FILTER_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
MEMORY_LIMIT=512MB
CPU_LIMIT=1.0

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENABLE_CORS=true
CORS_ORIGIN=https://flirrt.ai
ENABLE_HELMET=true
SESSION_TIMEOUT_HOURS=24

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/flirrt.crt
SSL_KEY_PATH=/etc/ssl/private/flirrt.key
FORCE_HTTPS=true

# Backup Configuration
ENABLE_AUTOMATED_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=flirrt-backups

# Blue-Green Deployment Configuration
ENABLE_BLUE_GREEN=true
HEALTH_CHECK_URL=http://localhost:3000/health
HEALTH_CHECK_TIMEOUT=10000
DEPLOYMENT_STRATEGY=blue-green

# Data Paths
DATA_PATH=/var/lib/flirrt
LOG_PATH=/var/log/flirrt
BACKUP_PATH=/var/backups/flirrt

# Third-party Integrations
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_analytics_id_here

# Compliance Configuration
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=730  # 2 years
ENABLE_DATA_DELETION=true

# Age Verification (Critical)
ENFORCE_AGE_VERIFICATION=true
MINIMUM_AGE=18
AGE_VERIFICATION_STRICT=true

# Content Safety
ENABLE_CONTENT_FILTERING=true
SAFETY_FILTER_THRESHOLD=0.8
ENABLE_HARASSMENT_DETECTION=true
ENABLE_ADULT_CONTENT_FILTER=true

# Production Optimizations
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_CDN=false  # Set to true when CDN is configured

# Error Handling
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_SERVICE=sentry
ENABLE_GRACEFUL_SHUTDOWN=true
SHUTDOWN_TIMEOUT_MS=30000

# Testing in Production
ENABLE_PRODUCTION_TESTING=false
TEST_USER_PERCENTAGE=0  # A/B testing percentage

# Development Overrides (Only for staging)
DEVELOPMENT_MODE=false
MOCK_API_CALLS=false
BYPASS_SAFETY_FILTERS=false  # NEVER set to true in production

# Multi-Agent Production Settings
AGENT_ORCHESTRATOR_TIMEOUT=60000
AGENT_HEALTH_CHECK_INTERVAL=30000
ENABLE_AGENT_METRICS=true
AGENT_RETRY_ATTEMPTS=3
AGENT_CIRCUIT_BREAKER_ENABLED=true

# Production Monitoring Alerts
ALERT_EMAIL=admin@flirrt.ai
ALERT_SLACK_WEBHOOK=your_slack_webhook_here
ENABLE_SMS_ALERTS=false
ALERT_COOLDOWN_MINUTES=5

# Performance Targets
TARGET_RESPONSE_TIME_MS=2000
TARGET_UPTIME_PERCENTAGE=99.9
TARGET_ERROR_RATE_PERCENTAGE=0.1
MEMORY_USAGE_ALERT_THRESHOLD=80
CPU_USAGE_ALERT_THRESHOLD=80

# Deployment Metadata
DEPLOYMENT_ID=flirrt_production_2025_09_25
BUILD_VERSION=1.0.0-production
GIT_COMMIT_HASH=auto_generated
DEPLOYED_BY=production_orchestrator
DEPLOYMENT_TIMESTAMP=auto_generated